@model Megazine.Models.Advertisement.Advertisement;
@{
    ViewData["Title"] = "Update";
}

<form method="Post" enctype="multipart/form-data" asp-action="Update" asp-controller="Advertisement">
    <h1>Update Article Data</h1>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Id)
                    </div>
                    <div class="col-md-9">
                        @Html.DisplayFor(model=>model.Id)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.OwenerName)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="OwenerName" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.CreatedDate)
                    </div>
                    <div class="col-md-9">
                        @*@Html.DisplayFor(model=>model.CreatedDate)*@
                        <input asp-for="CreatedDate" class="form-control" />

                    </div>
                </div>


                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Amount)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Amount" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.advertiseImageFile)
                    </div>
                    <div class="col-md-9">
                        @Html.DisplayFor(model=>Model.advertiseImage)
                        <input asp-for="advertiseImageFile" class="form-control" />
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-2">
                        <input type="submit" value="Edit" asp-action="Update" class="btn btn-primary" />
                    </div>
                    <div class="col-md-10">
                        <a asp-action="Index" asp-controller="Advertisement" class="btn btn-danger">Back To Index</a>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
</form>


