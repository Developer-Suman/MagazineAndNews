@using Megazine.Models.Journal;
@using Megazine.Models.News;
@using Megazine.Models.Advertisement;

@model dynamic

@{
    ViewData["Title"] = "Home Page";
}


    <div class="container-fluid ">
    <div class="title">
        
            <h3 class="head">-THE MAGAZINES POST-</h3>
            
    </div>
    
</div>
<hr />



    <div class="container mt-5">
        <div class="row">


        @foreach (Journal recentjournal in Model.recentJournal)
        {
            
                <div class="col-md-6">
                    <div class="journal">
                    <img src="~/Files/@recentjournal.JournalImage" height="400px" width="100%">


                    </div>

                </div>


                <div class="col-md-6">
                    <p class="article">
                    <div class="news-title">


                        <h2 class="heading-title">@recentjournal.Title</h2>

                    </div>


                    @recentjournal.Description
                    </p>
                <h2 class="author mt-5">By:@recentjournal.Author</h2>
                    <h2 class="author">Time: 5 hors ago</h2>
                </div>
                
            }
            
            
        


            


        </div>
    </div>
    </div>


<div class="container mt-5">
    <div class="row">
        @foreach (Journal journal in Model.Journals)
        {
            if (journal.Id == 3)
            {
                <div class="col-md-6">
                    <p class="article">
                        <div class="news-title">

                            <h2 class="heading-title">@journal.Title</h2>

                        </div>
                        @journal.Description
                    </p>
                    <h2 class="author mt-5">By:@journal.Author</h2>
                    <h2 class="author">Time: 5 hors ago</h2>




                </div>
                <div class="col-md-6">
                    <div class="journal">
                        <img src="~/Files/@journal.JournalImage" height="400px" width="100%">


            </div>
            
        </div>
        }
        }


    </div>
</div>
    </div>
</section>
<div class="container-fluid mt-5">
    <div class="ad-banner">

        @foreach (Advertisement exposeLitedAd in Model.ExposeAdvertsementLimited)
        {
            @if (@exposeLitedAd.CreatedDate >= DateTime.UtcNow)
            {
                <div class="banner">
                    <div>
                        <img src="~/Files/@exposeLitedAd.advertiseImage" height="100px" width="100%">
                    </div>

                </div>
                
            }
            
            
        }
       
        
    </div>

</div>

<div class="container mt-5">
    <div class="row">
        <h2>NEWS</h2>
        <div class="col-md-8">
            


            <div class="row">




                @foreach (News newsLimit in Model.NewssLimit)
                {

                        <div class="col-md-6">
                            <img src="~/Files/@newsLimit.ImageName" width="400" ,height="450">
                            <h2 class="heading-title">@newsLimit.Title</h2>
                            <div class="row mt-3">
                                <div class="col-md-2">
                                    <h1 class="category">@newsLimit.Category</h1>

                                </div>
                                <div class="col-md-10">
                                    <h3 class="author">20 hours ago</h3>

                                </div>
                            </div>
                        </div>
                        

                    
                    
                        
                }
              
                
            </div>
           

        </div>

        <div class="col-md-4">
            <h1 class="recent">RECENT UPDATES</h1>
            <div class="updated-news">


                @foreach (News news in Model.Newss)
                {
                <div class="row mt-3">
                    <div class="col-md-8">
                        <h1 class="category">@news.Category</h1>
                        <h2 class="news-title">
                            @news.Title
                        </h2>
                        <h3 class="news-time">5min ago</h3>
                    </div>
                    <div class="col-md-4">
                        <div class="updated-img">
                                <img src="~/Files/@news.ImageName" width="100" ,height="150">
                        </div>

                    </div>
                </div>

                }
               
              
                
                
               

            </div>
        </div>

    </div>

    <div class="Container mt-5 mb-5">
        <div class="row">
            <hr />
            
                @foreach (ArticleSecond article in Model.Articles)
                {
                <div class="col-md-4">
                    <h3>@article.Title</h3>
                <p>@article.Description</p>
                 <h2 class="author mt-5">By:@article.Author</h2>
                <h2 class="author">Time: 5 hors ago</h2>
            </div>
                    
                }
                
            <hr />
        </div>
    </div>
</div>







